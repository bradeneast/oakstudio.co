{%- for project in projects -%}
<div data-animate="from-bottom">
  <!---->
  <a style="height: 100%;" class="soft-grid" href="{{ project.data.url | url }}" {% if entry.data.url == url %} aria-current="page"{% endif %}>
    <!---->
    <div class="soft-grid__image">
      <img class="pos-abs" src="{{ project.data.image | url }}" alt="">
    </div>
    <!---->
    <div>
      <div class="soft-grid__title">{{ project.data.title }}</div>
      <div class="subtext">
      {% for tag in project.data.tags %}
      {%- for tagPage in search.pages("type=tag") -%}
        {%- if tagPage.data.tag == tag -%}
        {{ "," if loop.index > 1 }} <span class="tag">{{ tag }}</span>
        {%- endif -%}
      {%- endfor -%}
      {% endfor %}
      </div>
    </div>
    <!---->
  </a>
  <!---->
</div>
{%- endfor -%}
